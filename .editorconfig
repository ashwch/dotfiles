# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{sh,bash,zsh}]
indent_size = 2

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[*.{c,cpp,h,hpp}]
indent_size = 4

[*.{java,kt}]
indent_size = 4

[*.php]
indent_size = 4

[*.rb]
indent_size = 2

[*.rs]
indent_size = 4

[*.swift]
indent_size = 4